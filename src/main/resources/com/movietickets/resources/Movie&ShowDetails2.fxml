<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1050.0" prefWidth="850.0" style="-fx-background-color: #1A1D3A;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movietickets.ui.Controller.MovieDetails2Controller">
    <children>

        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>

                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Movie &amp; Show Details" textFill="WHITE">
                            <font>
                                <Font name="System Bold Italic" size="28.0" />
                            </font>
                        </Label>
                        <Label text="-----------------------------" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="MovieID:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myMovieID" editable="false" prefWidth="250.0" promptText="MovieID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Title:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myTitle" editable="false" prefWidth="250.0" promptText="Title" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Description:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myDescription" editable="false" prefWidth="250.0" promptText="Description" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Duration:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myDuration" editable="false" prefWidth="250.0" promptText="Duration" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Rating:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myRating" editable="false" prefWidth="250.0" promptText="Rating" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Category:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myCategory" editable="false" prefWidth="250.0" promptText="Category" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <Label text="--- Show Info ---" textFill="GRAY">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="ShowID:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myShowID" editable="false" prefWidth="250.0" promptText="ShowID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Start Time:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myStartTime" editable="false" prefWidth="250.0" promptText="Start Time" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Date:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myDate" editable="false" prefWidth="250.0" promptText="Date" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label prefWidth="100.0" text="Hall:" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="myHallID" editable="false" prefWidth="250.0" promptText="Hall" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                    </children>
                </HBox>

                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label text="Reserve Seats:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <Button fx:id="myreservatiion" mnemonicParsing="false" onAction="#goReservation" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Confirm Reservation" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>

                        <ComboBox fx:id="lettersCombo" onAction="#showCheckBoxes" prefHeight="30.0" prefWidth="180.0" promptText="Select Row" style="-fx-background-radius: 5;" />

                        <VBox fx:id="numbersBox" alignment="CENTER" spacing="10.0" visible="false" />

                        <Button fx:id="myButtonADD" mnemonicParsing="false" onAction="#getValues" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Check &amp; Add" textFill="WHITE" visible="false">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>

                        <Label fx:id="labelCheck" alignment="CENTER" textFill="RED" wrapText="true">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Button fx:id="myback" mnemonicParsing="false" onAction="#goMovie" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Back To Movies" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>

            </children>
        </VBox>
    </children>
</AnchorPane>
