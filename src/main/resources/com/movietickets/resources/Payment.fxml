<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="850.0" prefWidth="850.0" style="-fx-background-color: #1A1D3A;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movietickets.ui.Controller.PaymentController">
   <children>

      <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" top="30.0" />
         </padding>
         <children>

            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Payment Page" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="28.0" />
                     </font>
                  </Label>
                  <Label text="------------" textFill="WHITE">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <padding>
                        <Insets top="-10.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="PaymentID:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="mypaymentID" editable="false" prefWidth="250.0" promptText="PaymentID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="ReservationID:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="myReservationID" editable="false" prefWidth="250.0" promptText="ReservationID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="Amount:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="myAmount" editable="false" prefWidth="250.0" promptText="Amount" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="Method OF Payment:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="mymethodPayment" onAction="#confirmReservation" prefWidth="250.0" promptText="Select Method" style="-fx-background-radius: 5;" />
               </children>
            </HBox>
            <Label fx:id="myLabelMethod" text="LabelOfMethod" textFill="WHITE" visible="false">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
            </Label>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="Transaction ID:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="myTransactionID" editable="false" prefWidth="250.0" promptText="Transaction ID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label prefWidth="160.0" text="Time:" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="myTime" editable="false" onAction="#getValue" prefWidth="250.0" promptText="Time" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
               </children>
            </HBox>
            <Label fx:id="myLabelTime" text="LabelOF Time" textFill="WHITE" visible="false">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>

            <Button mnemonicParsing="false" onAction="#goProcess" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Process Payment" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>

            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="myDetailsLable" text="Payment Details:" textFill="WHITE" visible="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea id="myTextAreaDetails" fx:id="myTextAreaDetails" editable="false" maxWidth="500.0" prefHeight="150.0" prefWidth="500.0" promptText="Payment Details" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" visible="false" wrapText="true" />

                  <Button fx:id="myRefund" mnemonicParsing="false" onAction="#goRefund" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Refund Payment" textFill="WHITE" visible="false">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

            <Button fx:id="myback" mnemonicParsing="false" onAction="#goBack" prefHeight="36.0" prefWidth="185.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Back To Reservation" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>

         </children>
      </VBox>
   </children>
</AnchorPane>
