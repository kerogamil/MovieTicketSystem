<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="850.0" style="-fx-background-color: #1A1D3A;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movietickets.ui.Controller.ProfileUserController">
   <children>

      <VBox alignment="TOP_CENTER" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" top="40.0" />
         </padding>
         <children>

            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Profile Page" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="28.0" />
                     </font>
                  </Label>
                  <Label text="----------------------" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Label prefWidth="100.0" text="User ID:" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="myUserID" editable="false" prefWidth="250.0" promptText="User ID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Label prefWidth="100.0" text="Email:" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="myUserEmail" editable="false" prefWidth="250.0" promptText="Email" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="mybookTicket" text="Book Ticket:" textFill="WHITE" visible="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelUserID" text="User ID:" textFill="WHITE" visible="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="myUserID2" editable="false" prefWidth="100.0" promptText="User ID" style="-fx-control-inner-background: #1A1D3A; -fx-text-fill: white; -fx-background-color: #1A1D3A; -fx-border-color: white; -fx-border-radius: 5;" visible="false" />
                  <Label fx:id="LabelBooked" text="Booked Ticket" textFill="WHITE" visible="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="mymovies" mnemonicParsing="false" onAction="#goMovies" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Scroll Movies" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="myhome" mnemonicParsing="false" onAction="#goHome" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, #000000 0.0%, #30059e 100.0%); -fx-background-radius: 8;" text="Back to Home" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>

         </children>
      </VBox>
   </children>
</AnchorPane>
